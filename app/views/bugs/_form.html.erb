<%= form_with(model: bug) do |form| %>
  <% if bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
        <% bug.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<br>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
<br>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
<br>
  <div class="actions">
    <%= form.label :screenshot %>
    <%= form.file_field :screenshot %>
  </div>
<br>
  <div class="field">
    <%= form.label :bugtype %><br />
    <%= form.select :bugtype, options_for_select(Bug.bugtypes.keys) %>
  </div>
<br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
